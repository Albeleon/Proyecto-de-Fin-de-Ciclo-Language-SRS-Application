{% extends 'layout.html.twig' %}

{% block title %}Language SRS Application - Add SRS{% endblock %}

{% block body %}
<div id="main-body">
    <form action="/addingSRS" method="post">
        <h2>Create SRS</h2>
        <div class="form-group">
            <label for="nombre">Name: </label>
            <input type="text" class="form-control" name="nombre" id="nombre" required>
        </div>


        <div class="form-group">
            <label for="idiomaObjetivo">Target language: </label>
            <select class="form-control" name="idiomaObjetivo" id="idiomaObjetivo" required>
                <option value="">Select a target language</option>
                {% for language in languages %}
                    <option value="{{ language.language_id }}">{{ language.language_name | capitalize }}</option>
                {% endfor %}
            </select>
        </div>
        
        <div class="form-group">
            <label for="idiomaNativo">Native language: </label>
            <select class="form-control" name="idiomaNativo" id="idiomaNativo" required>
                <option value="">Select a native language</option>
                {% for language in languages %}
                    <option value="{{ language.language_id }}">{{ language.language_name | capitalize }}</option>
                {% endfor %}
            </select>
        </div>

        <input class="btn btn-primary" type="submit" value="Create SRS">
    </form>
</div>
{% endblock %}
